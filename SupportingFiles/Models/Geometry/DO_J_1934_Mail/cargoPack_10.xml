<PropertyList>
	<path>cargo.ac</path>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
    <object-name>canvas</object-name>
	</effect>

	<animation>
		<object-name>cargo.001</object-name>
		<object-name>cargo.002</object-name>
		<object-name>cargo.003</object-name>
		<object-name>canvas</object-name>
	</animation>

  <animation>
    <type>select</type>
		<object-name>canvas</object-name>
    <condition>
      <greater-than>
        <property>controls/cargo</property>
        <value>30.0</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
		<object-name>cargo.001</object-name>
    <condition>
      <greater-than>
        <property>controls/cargo</property>
        <value>29.0</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
		<object-name>cargo.002</object-name>
    <condition>
      <greater-than>
        <property>controls/cargo</property>
        <value>28.0</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
		<object-name>cargo.003</object-name>
    <condition>
      <greater-than>
        <property>controls/cargo</property>
        <value>27.0</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>pick</type>
	  <object-name>cargo.001</object-name>	
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <condition>
          <and>
            <greater-than>
	            <property>controls/cargo</property>
              <value>29.0</value>
            </greater-than>
            <less-than>
	            <property>controls/cargo</property>
              <value>31.0</value>
            </less-than>
          </and>
        </condition>
        <command>property-toggle</command>
        <property>/controls/special/catapult-carrier-crane/cargo-schwabenland-toggle</property>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
	  <object-name>cargo.002</object-name>	
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <condition>
          <and>
            <greater-than>
	            <property>controls/cargo</property>
              <value>28.0</value>
            </greater-than>
            <less-than>
	            <property>controls/cargo</property>
              <value>31.0</value>
            </less-than>
          </and>
        </condition>
        <command>property-toggle</command>
        <property>/controls/special/catapult-carrier-crane/cargo-schwabenland-toggle</property>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
	  <object-name>cargo.003</object-name>	
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <condition>
          <and>
            <greater-than>
	            <property>controls/cargo</property>
              <value>27.0</value>
            </greater-than>
            <less-than>
	            <property>controls/cargo</property>
              <value>31.0</value>
            </less-than>
          </and>
        </condition>
        <command>property-toggle</command>
        <property>/controls/special/catapult-carrier-crane/cargo-schwabenland-toggle</property>
      </binding>
    </action>
  </animation>

</PropertyList>

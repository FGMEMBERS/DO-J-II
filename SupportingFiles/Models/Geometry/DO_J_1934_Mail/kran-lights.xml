<PropertyList>

	<path>kran-lights.ac</path>

	<!-- Rembrand - Search light -->
	<animation>
		<type>select</type>
		<object-name>SearchBall</object-name>
		<object-name>SearchBall1</object-name>
		<object-name>SearchVolume</object-name>
		<object-name>SearchVolume1</object-name>
		<object-name>LightVolume</object-name>
    <condition>
      <and>
			  <property>/sim/rendering/rembrandt/enabled</property>
        <greater-than>
          <property>/sim/time/sun-angle-rad</property>
          <value>1.5</value>
        </greater-than>
      </and>
    </condition>
	</animation>

